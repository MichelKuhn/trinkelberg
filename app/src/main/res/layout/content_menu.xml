<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michel.trinkelberg.Menu"
    tools:showIn="@layout/activity_menu">

    <ToggleButton
        android:id="@+id/heteroButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/nsfwButton"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/hetero"
        android:layout_width="106dp"
        android:layout_height="47dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="8dp"
        android:text="Gemischt"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/socialButton"
        app:layout_constraintTop_toBottomOf="@+id/NSFW" />

    <ToggleButton
        android:id="@+id/nsfwButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/socialButton"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/NSFW"
        android:layout_width="106dp"
        android:layout_height="47dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="7dp"
        android:text="NSFW"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/socialButton"
        app:layout_constraintTop_toBottomOf="@+id/social" />

    <ToggleButton
        android:id="@+id/socialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        tools:layout_editor_absoluteY="28dp"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/social"
        android:layout_width="106dp"
        android:layout_height="47dp"
        android:layout_marginRight="26dp"
        android:text="Social Media"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/socialButton"
        tools:layout_editor_absoluteY="39dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ZurÃ¼ck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
